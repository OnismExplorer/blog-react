{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@type/*": ["src/type/*"],
      "@utils/*": ["src/utils/*"],
      "@api/*": ["src/api/*"],
      "@pages/*": ["src/pages/*"],
      "@error/*": ["src/error/*"],
      "@components/*": ["src/components/*"],
    },
    "target": "es2023",
    "lib": [
      "dom",
      "es2023",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
  },
  "include": [
    "src"
  ]
}
